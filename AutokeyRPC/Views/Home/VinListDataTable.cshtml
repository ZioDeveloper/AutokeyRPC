            <b><font color="green"> @Model.RPC_Telai_vw.Count() </font></b>
            <br />
    </thead>
    <tbody>
        @foreach (var item in Model.RPC_Telai_vw)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IsFinished)
                    </td>*@
